<div class="container">
  <form  class="mt-5" id="checkout-form">
    <div class="row">
      <div class="col-7">
        <div class="mb-3">
          <label for="full-name" class="form-label">Enter Your Full Name</label>
          <input
            type="text"
            name="fullName"
            class="form-control"
            id="full-name"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Enter Your Email </label>
          <input
            type="email"
            class="form-control"
            id="email"
            aria-describedby="emailHelp"
            name="email"
          />
          <div id="emailHelp" class="form-text">We'll never share your email
            with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="mobile" class="form-label">Enter Your Mobile Number</label>
          <input type="number" class="form-control" id="mobile" name="mobile" />
        </div>
        <div class="mb-3">
          <label for="address" class="form-label">Address</label>
          <input type="text" name="address" class="form-control" id="address" />
          <input type="text" name="userId"  id="" value="{{SessionUser._id}}" hidden />
        </div>

      </div>
      <div class="col-5">
        <div class="w-100 border border-dark">
          <h2 class="text-center text-primary p-4">Total Amount : â‚¹ {{total}}</h2>
          <hr />
          <div class="p-3 px-5">
            <p>Payment Method</p>
            <div class="form-check">
              <label class="form-check-label" for="cod">
              <input
                class="form-check-input"
                type="radio"
                name="paymentMethod"
                id="cod"
                  value="COD"
                    checked
              />
                Cash On Delivery
              </label>
              <br>
              <label class="form-check-label" for="online">
              <input
                class="form-check-input"
                type="radio"
                name="paymentMethod"
                id="online"
                  value="online"
     
              />
                E-Payment
              </label>
            </div>

            <button class="btn btn-success w-100 mt-4 mb-4">Checkout</button>
            </div>
          </div>

        </div>
      </div>
    </div>
  </form>

</div>

