<div class="container">

  <table class="table ">
    <thead>
      <tr>
        <th scope="col">Product Name</th>
        <th scope="col">image</th>
        <th scope="col">Price in ₹</th>
        <th scope="col">Quantity</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>

      {{#each products}}
      <tr>

        <td>{{this.product.name}}</td>

        <td><img src="/images/product_images/{{this.product._id}}.jpg" alt="{{this.product.name}}"
            class="display-image" /></td>

        <td>{{this.product.price}}</td>
        
        <td>
          <i class="fas fa-minus-circle cart-action-buttons"
            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../SessionUser._id}}',-1)"></i>
          <span class="quanity-sapn" id="{{this.product._id}}">{{this.quantity}}</span>
          <i class="fas fa-plus-circle cart-action-buttons"
            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../SessionUser._id}}',1)"></i>
        </td>
        <td>
          <i class="far fa-trash-alt font-awesome-action cart-action-buttons"
            onclick="deleteProductFromCart('{{this._id}}','{{this.product._id}}','{{this.product.name}}')"></i>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <hr />
  <div class="d-flex flex-column justify-content-end float-end">
    <div class="float-end">
      <h3 class="text-primary">Total Amount ₹ : <span id="total">{{total}}</span> </h3>
    </div>
    <div class="float-end">
      <a class="btn btn-primary" href="/place-order" style="width: 100%;">Place
        Order</a>
    </div>
  </div>
</div>