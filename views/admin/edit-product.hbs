<div class="container">
  <form
    action="/admin/edit-product/{{product._id}}"
    method="POST"
    enctype="multipart/form-data"
  >

    <div class="mb-3">
      <label for="product_name" class="form-label">Enter Product Name</label>
      <input
        value="{{product.name}}"
        type="text"
        class="form-control"
        id="product_name"
        name="name"
        rows="3"
      />
    </div>
    <div class="mb-3">
      <label for="product_price" class="form-label">Enter Product Price</label>
      <input
        value="{{product.price}}"
        type="number"
        class="form-control"
        id="product_price"
        name="price"
        rows="3"
      />
    </div>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Enter Product
        Description</label>
      <textarea
        class="form-control"
        id="exampleFormControlTextarea1"
        name="description"
        rows="3"
      >{{product.description}}</textarea>
    </div>
    <div class="input-group mb-3">
      <input
        type="file"
        class="form-control"
        id="inputGroupFile04"
        name="img"
        aria-describedby="inputGroupFileAddon04"
        aria-label="Upload"
        onchange="viewImage(event)"
      />

    </div>
    <div class="mb-3">
      <img
        src="/images/product_images/{{product._id}}.jpg"
        alt=""
        class="edit-product-image"
        id="imgView"
      />
    </div>

    <div class="mb-3">
      <button class="btn btn-primary">Submit</button>
    </div>
  </form>

</div>

<script>
  function viewImage(event){
  document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0]);
  }
</script>